<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head',{title:'Register'}) %>

    <body class="bodyF">

        <header class="home-header">
            <div class="componentes">
                <div class="burger-menu">
                    <i class="fas fa-bars"></i>
                </div>
                <a href="/">
                    <img class="logo" src="../../../images/Logo.png" alt="Logo">
                </a>

                <form class="barra-busqueda">
                    <div class="div-barra">
                        <input class="barra" name="Buscar" type="text" placeholder="Buscar...">
                        <div><i class="fa-solid fa-magnifying-glass"></i>
                        </div>
                    </div>
                </form>
                <div>
                    <nav class="nav">
                        <ul class="ingresar">
                            <li><a class="acceso" href="/authentication/acceso">Iniciar Sesión</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>

        <!--Registro-->
        <main class="mainC">
            <section class="tipoletra">
                <form action="/authentication/registro" method="post">
                    <div class="global">
                        <div class="colordeletra">
                            <h2>Registrarse</h2>
                        </div>
                        <div>
                            <input class="registerFbGM" type="button" name="correo" value="Registrarse con Facebook">
                            <i class="fa-brands fa-facebook"></i>
                        </div>
                        <div>
                            <input class="registerFbGM" type="button" name="correo" value="Registrarse con Gmail">
                            <i class="fa-solid fa-m"></i>
                        </div>
                        <div class="colordeletra">
                            <hr class="separador">
                            <br>
                        </div>
                        <div class="Register">
                            <label for="nombre">Nombre:</label>
                            <input type="text" id="nombre" name="name" value="">
                        </div>
                        <div class="Register">
                            <label for="apellido">Apellido:</label>
                            <input type="text" id="apellido" name="lastname" value="">
                        </div>
                        <div class="Register">
                            <label for="correo_electronico">Correo electrónico:</label>
                            <input type="email" id="correo_electronico" name="email" value="">
                        </div>
                        <div class="Register">
                            <label for="contraseña">Contraseña:</label>
                            <input type="password" id="contraseña" name="password" value="">
                        </div>
                        <div class="Register">
                            <label for="avatar">Avatar:</label>
                            <input type="file" id="contraseña" name="avatar" value="">
                        </div>
                        <div class="input-submit-container">
                            <input class="boton" type="submit" name="Registrarme" value="Registrarme">
                        </div>
                    </div>
                </form>
            </section>
        </main>

        <%- include('../partials/footer') %>

    </body>

</html>