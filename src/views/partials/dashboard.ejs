<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head",{title:"Dashboard"}) %>

</head>

<body class="bodyDashboard">
    <input type="checkbox" id="toggle-menu">
    <div class="menu-dashboard">
        <div class="top-menu">
            <div class="logo">
                <img src="../../images/Logo.png" alt="">
            </div>
            <label for="toggle-menu" class="toggle">
                <i class="fas fa-bars"></i>
            </label>          
        </div>
        <div class="input-search">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Buscar...">
        </div>    
        <div class="menu" onclick="window.location.href='/home';">
            <div class="enlace">
                <i class="fas fa-home"></i>                
                <span><a href="/">Home</a></span>
            </div>
            <% if(!locals.userLogin) { %>
            <div class="enlace"  onclick="window.location.href='/login';">
                <i class="fas fa-user"></i>
                <span><a href="/authentication/login">Iniciar Sesion</a></span>
            </div>
            <div class="enlace"  onclick="window.location.href='/register';">
                <i class="fa-solid fa-user-plus"></i>
                <span><a href="/authentication/registro">Crear Usuario</a></span>
            </div>
            <% } else { %>
            <div class="enlace"  onclick="window.location.href='/perfil';">
                <i class="fa-solid fa-user"></i>
                <span><a href="/users/perfil">Ver Perfil</a></span>
            </div>
            <% } %>
            <div class="enlace"  onclick="window.location.href='/carrito';">
                <i class="fas fa-shopping-cart"></i>
                <span><a href="/carrito">Carrito</a></span>
            </div>
            <div class="enlace"  onclick="window.location.href='/detail';">
                <i class="fas fa-shopping-bag"></i>
                <span><a href="/detail">Producto</a></span>
            </div>
            <div class="enlace"  onclick="window.location.href='/admin/editar-producto';">
                <i class="fa-solid fa-pen-to-square"></i>
                <span><a href="/admin/editar-producto">Editar Producto</a></span>
            </div>
            <div class="enlace"  onclick="window.location.href='/admin/crear-producto';">
                <i class="fa-solid fa-screwdriver-wrench"></i>
                <span><a href="/admin/crear-producto">Crear Producto</a></span>
            </div>
        </div>
    </div>


</body>

</html>
